<h1>New Blog Post</h1>

<%= form_with(model: @blog_post, url: blog_posts_path, method: :post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div>
    <%= form.submit 'Create Blog Post' %>
  </div>
<% end %>

<%= link_to 'Back', blog_posts_path %>
