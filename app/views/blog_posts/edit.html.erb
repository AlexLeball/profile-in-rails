<%= form_for @blog_post, html: { class: 'blog-post-form' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter the title of your blog post' %>
  </div>

  <div class="form-group">
    <%= f.label :body, class: 'form-label' %>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Write your blog post here', rows: 10 %>
  </div>

  <div class="form-group">
    <%= f.label :published_at, class: 'form-label' %>
    <%= f.datetime_select :published_at, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :photo, class: 'form-label' %>
    <%= f.file_field :photo, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Update Blog Post', class: 'btn btn-primary' %>
  </div>
<% end %>
