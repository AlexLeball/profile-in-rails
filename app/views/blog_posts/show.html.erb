<%= render partial: 'navbar/navbar' %>
<div class="container">
  <div class="post-body">
    <h1><%= @blog_post.title %></h1>
  </div>
  <div class="publication">
    <p><%= @blog_post.created_at.strftime("%B %e, %Y") %></p>
  </div>

  <div class="blog-post">
    <div class="blog-photo">
      <% if @blog_post.photo.attached? %>
        <%= image_tag @blog_post.photo %>
      <% end %>
    </div>
  </div>

  <div class="blog-post-body">
    <%= simple_format @blog_post.body %>
  </div>

  <% if can_edit? %>
    <%= link_to 'Edit', edit_blog_post_path(@blog_post) %>
    <%= link_to 'Delete', blog_post_path(@blog_post), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this blog post?' } %>
  <% end %>

  <%=  link_to 'Back to Blog Posts', blog_posts_path, class: "btn-blog" %>
</div>
